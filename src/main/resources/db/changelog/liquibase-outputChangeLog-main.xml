<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="book" author="codewizard">
        <createTable tableName="book">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="pub_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="is_bestseller" type="TINYINT">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="image" type="VARCHAR(255)"/>
            <column name="description" type="text"/>
            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="discount" type="TINYINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="author" author="codewizard">
        <createTable tableName="author">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="photo" type="VARCHAR(255)"/>
            <column name="slug" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="book2author" author="codewizard">
        <createTable tableName="book2author">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="sort_index" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="book_review" author="codewizard">
        <createTable tableName="book_review">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="book_review_like" author="codewizard">
        <createTable tableName="book_review_like">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="review_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="tinyint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="genre" author="codewizard">
        <createTable tableName="genre">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="parent_id" type="int"/>
            <column name="slug" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="book2genre" author="codewizard">
        <createTable tableName="book2genre">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="genre_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="users" author="codewizard">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="reg_time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="balance" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="user_contact" author="codewizard">
        <sql>CREATE TYPE contact_type AS ENUM ('PHONE','EMAIL')</sql>
        <createTable tableName="user_contact">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="contact_type"/>
            <column name="approved" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(255)"/>
            <column name="code_trials" type="int"/>
            <column name="code_time" type="datetime"/>
            <column name="contact" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="book2user" author="codewizard">
        <createTable tableName="book2user">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="datetime"/>
            <column name="type_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="book2user_type" author="codewizard">
        <createTable tableName="book2user_type">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="balance_transaction" author="codewizard">
        <createTable tableName="balance_transaction">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="book_file" author="codewizard">
        <createTable tableName="book_file">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="hash" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="path" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="book_file_type" author="codewizard">
        <createTable tableName="book_file_type">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="file_download" author="codewizard">
        <createTable tableName="file_download">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="int" defaultValue="1">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="document" author="codewizard">
        <createTable tableName="document">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="sort_index" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="faq" author="codewizard">
        <createTable tableName="faq">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="sort_index" type="int" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="question" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="answer" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="message" author="codewizard">
        <createTable tableName="message">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int"/>
            <column name="email" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="subject" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
